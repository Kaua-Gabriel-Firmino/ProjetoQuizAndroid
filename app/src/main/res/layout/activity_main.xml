<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/rdgroup"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginTop="-250dp"
        android:background="@color/red_1"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rdb1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/red_2"
            android:text="@string/texto_alternativa_a" />

        <RadioButton
            android:id="@+id/rdb2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/red_3"
            android:text="@string/texto_alternativa_b" />

        <RadioButton
            android:id="@+id/rdb3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/red_4"
            android:text="@string/texto_alternativa_c" />

        <RadioButton
            android:id="@+id/rdb4"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/red_5"
            android:text="@string/texto_alternativa_d" />
    </RadioGroup>

    <Button
        android:id="@+id/btnresponder"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/texto_botao"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rdgroup" />

    <TextView
        android:id="@+id/txvPergunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/texto_pergunta_1"
        app:layout_constraintBottom_toTopOf="@+id/rdgroup"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="143dp" />
</androidx.constraintlayout.widget.ConstraintLayout>